{% extends 'AnhGalaxyManagerBundle::layout.html.twig' %}

{% block content %}
<h1>Service list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Address</th>
            <th>Tcpport</th>
            <th>Udpport</th>
            <th>Pingport</th>
            <th>Version</th>
            <th>Status</th>
            <th>Lastpulse</th>
            <th>Createdat</th>
            <th>Updatedat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('service_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.tcpPort }}</td>
            <td>{{ entity.udpPort }}</td>
            <td>{{ entity.pingPort }}</td>
            <td>{{ entity.version }}</td>
            <td>{{ entity.status }}</td>
            <td>{{ entity.lastPulse }}</td>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('service_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('service_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('service_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
